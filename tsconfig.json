{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./",
    "outDir": "./dist",

    // Environment Settings
    // MUDANÇA PRINCIPAL: Usar CommonJS para o sistema de módulos
    "module": "CommonJS",
    "target": "ES2022", 
    "types": [],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    // MUDANÇA: Alinhar a resolução de módulos com o sistema CommonJS
    "moduleResolution": "Node", 
    "strict": true,
    "jsx": "react-jsx",
    
    // MUDANÇA CRUCIAL: Desativar para permitir que 'import/export' sejam traduzidos para CJS
    "verbatimModuleSyntax": false, 
    
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}